<div class="container">
<h2 class="text-center">Matching Confirm</h2>
<div class="card w-50 mx-auto">
  <div class="card-header">
    <%= link_to "Name: #{@offering_post.user.name} さん", user_path(@offering_post.user_id) %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= link_to "Title: #{@offering_post.title}", offering_post_path(@offering_post) %></p>
    </blockquote>
  </div>
</div>
<div class="row my-3">
<div class="col text-center">
<%= form_with model: @matching, local: true do |f| %>
<%= f.hidden_field :user_id, value: current_user.id %>
<%= f.hidden_field :offering_post_id, value: @offering_post.id %>
<%= f.submit "マッチング", class: "btn btn-primary" %>
<% end %>
</div>
</div>
</div>
