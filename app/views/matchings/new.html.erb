<div class="container">
<h2 class="text-center">Matching Confirm</h2>
<div class="card w-50 mx-auto">
  <div class="card-header">
    <%= link_to "Name: #{@offering_post.user.name} さん", user_path(@offering_post.user_id) %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= link_to "Title: #{@offering_post.title}", offering_post_path(@offering_post) %></p>
    </blockquote>
  </div>
</div>
<div class="row my-3">
<div class="col text-center">
<%= form_with url: matchings_path, method: :post, scope: :matching, local: true do |f| %>
<%= f.hidden_field :follower_id, value: current_user.id %>
<%= f.hidden_field :followed_id, value: @offering_post.user_id %>
<%= f.hidden_field :followed_post_id, value: @offering_post.id %>
<%= f.select :follower_post_id, @my_posts, { include_blank: '選択してください'}, { class: 'form-control w-50 mx-auto' } %>
<%= f.submit "マッチング", class: "btn btn-primary" %>
<% end %>
</div>
</div>
</div>
