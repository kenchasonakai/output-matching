<div class="row mt-2">
<div class="col">
<div class="form-group">
  <%= f.label :body, "希望時間等" %>
  <%= f.text_area :body, class: "form-control", placeholder: "希望時間やその他伝えたいことを入力してください", wrap: "soft", rows: "5" %>
</div>
</div>
</div>
<%= f.submit "プレビュー", class: "btn btn-primary" %>
