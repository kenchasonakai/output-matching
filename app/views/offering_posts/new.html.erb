<div class="container">
<div class="row">
<div class="col">
<h1>Create Post</h1>
<%= form_with model: @offering_post, local: true do |f| %>
<div class="form-group">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title, class: "form-control", placeholder: "title" %>
</div>
<div class="form-group">
  <%= f.label :body, "Body" %>
  <%= f.text_area :body, class: "form-control", placeholder: "Body", wrap: "soft", rows: "10" %>
</div>
<%= f.submit "投稿", class: "btn btn-primary" %>
<% end %>
</div>
</div>
</div>
