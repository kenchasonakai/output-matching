<tr>
  <td><%= link_to offering_post.user.name, "#" %></td>
	<td><%= link_to offering_post.title, offering_post_path(offering_post) %></td>
	<td><%= offering_post.created_at %></td>
	<td><%= offering_post.status %></td>
	<td>
		<% if offering_post.user_id != current_user.id %>
		<%= form_with url: new_matching_path, method: :get, local: true do |f| %>
		<%= f.hidden_field :offering_post_id, value: offering_post.id %>
		<%= f.submit "マッチングする？", class: "btn btn-primary float-right" %>
		<% end %>
		<% end %>
	</td>
</tr>
