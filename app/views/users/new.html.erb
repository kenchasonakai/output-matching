<div class="container">
<div class="row">
<div class="col">
<h1>User#Signup!</h1>
<%= form_with model: @user, local: true do |f| %>
<div class="form-group">
  <%= f.label :name, "Name" %>
  <%= f.text_field :name, class: "form-control", placeholder: "Enter Your Name" %>
</div>
<div class="form-group">
  <%= f.label :email, "Email" %>
  <%= f.email_field :email, class: "form-control", placeholder: "Enter Your Email" %>
</div>
<div class="form-group">
  <%= f.label :password, "Password" %>
  <%= f.password_field :password, class: "form-control", placeholder: "password" %>
</div>
<div class="form-group">
  <%= f.label :password_confirmation, "Password Confirmation" %>
  <%= f.password_field :password_confirmation, class: "form-control", placeholder: "password confirmation" %>
</div>
<%= f.submit "登録", class: "btn btn-primary" %>
<% end %>
</div>
</div>
</div>
